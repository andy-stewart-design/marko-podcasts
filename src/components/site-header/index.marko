style {
    header {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;

        background: oklch(var(--gray-950-oklch) / 0.6);
        border-bottom: 1px solid oklch(var(--gray-50-oklch) / 0.075);
        backdrop-filter: blur(8px);
        z-index: 10;

        section {
            display: grid;
            grid-template-columns: 120px 1fr;
            gap: 1rem;
            max-width: var(--app-max-width);
            margin: auto;

            padding-inline: var(--app-padding-inline);
            padding-block: 1.5rem;

            @media screen and (width >= 560px) {
                grid-template-columns: repeat(2, 1fr);
            }

            @media screen and (width >= 960px) {
                grid-template-columns: repeat(3, 1fr);
            }
        }
    }

    form.search {
        --bg-opacity: 0.75;
        --border-opacity: 0.15;
        background: oklch(var(--gray-900-oklch) / var(--bg-opacity));
        border: 1px solid oklch(var(--gray-50-oklch) / var(--border-opacity));
        border-radius: 0.25rem;

        transition:
            background 200ms ease-out,
            border 200ms ease-out;

        &:has(input:focus-visible) {
            --bg-opacity: 1;
            --border-opacity: 0.5;
            outline: none;
        }
    }

    div.logo {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        text-transform: uppercase;
        font-weight: 600;
        letter-spacing: 3px;
    }

    input.search {
        width: 100%;
        background: transparent;

        padding-inline: 0.5rem;
        height: 2.5rem;

        &:focus-visible {
            outline: none;
        }

        &:placeholder-shown {
            opacity: 0.5;
        }
    }
}
